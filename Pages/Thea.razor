@page "/thea"

<link href="https://bootswatch.com/vapor/bootstrap.min.css" rel="stylesheet" />

<style>
    .countdown-container {
        background: #6c757d;
        border-radius: 15px;
        padding: 3rem 2rem;
        margin: 2rem auto;
        max-width: 800px;
        color: white;
    }
    
    .countdown-title {
        font-size: 3rem;
        margin-bottom: 2rem;
    }
    
    .time-grid {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }
    
    .time-box {
        background:rgb(83, 93, 123);
        border-radius: 10px;
        padding: 1.5rem;
        text-align: center;
        min-width: 120px;
    }
    
    .time-number {
        font-size: 2.5rem;
        font-weight: bold;
        display: block;
    }
    
    .time-label {
        font-size: 1rem;
        margin-top: 0.5rem;
    }
    
    .today-date {
        margin-top: 2rem;
        font-size: 1.2rem;
    }
</style>

<div class="container text-center">
    <div class="countdown-container">
        <h1 class="countdown-title">Hun kommer hjem</h1>
        <p>16. juli 2025</p>
        
        <div class="time-grid">
            <div class="time-box">
                <span class="time-number">@GetDaysUntilJuly16()</span>
                <div class="time-label">Dager</div>
            </div>
            <div class="time-box">
                <span class="time-number">@GetHoursUntilJuly16()</span>
                <div class="time-label">Timer</div>
            </div>
        </div>
        
        <div class="today-date">
            I dag: @GetTodaysDate()
        </div>
    </div>
</div>

@code {
    private string GetTodaysDate()
    {
        return DateTime.Now.ToString("d. MMMM yyyy", new System.Globalization.CultureInfo("da-DK"));
    }
    
    private TimeSpan GetTimeUntilJuly16()
    {
        DateTime targetDate = new DateTime(2025, 7, 16);
        if (targetDate < DateTime.Now)
        {
            targetDate = targetDate.AddYears(1);
        }
        return targetDate - DateTime.Now;
    }
    
    private int GetDaysUntilJuly16()
    {
        return Math.Max(0, GetTimeUntilJuly16().Days);
    }
    
    private int GetHoursUntilJuly16()
    {
        return Math.Max(0, GetTimeUntilJuly16().Hours);
    }
    
    private int GetMinutesUntilJuly16()
    {
        return Math.Max(0, GetTimeUntilJuly16().Minutes);
    }
    
    private int GetSecondsUntilJuly16()
    {
        return Math.Max(0, GetTimeUntilJuly16().Seconds);
    }
}
